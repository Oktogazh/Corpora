{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    "firebase/functions": {
      "release-type": "node"
    },
    "web": {
      "release-type": "node",
      "changelog-path": "public/CHANGELOG.md"
    }
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "🚀 Features",
      "hidden": false
    },
    {
      "type": "change",
      "section": "🚀 Features",
      "hidden": false
    },
    {
      "type": "deprecate",
      "section": "⚠️ Changes",
      "hidden": false
    },
    {
      "type": "remove",
      "section": "⚠️ Changes",
      "hidden": false
    },
    {
      "type": "update",
      "section": "⚠️ Changes",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "🐞 Bug Fixes",
      "hidden": false
    },
    {
      "type": "revert",
      "section": "🐞 Bug Fixes",
      "hidden": false
    },
    {
      "type": "clean",
      "section": "✨ Polish",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "✨ Polish",
      "hidden": false
    },
    {
      "type": "style",
      "section": "✨ Polish",
      "hidden": false
    },
    {
      "type": "init",
      "section": "🧰 Other",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "🧰 Other",
      "hidden": false
    },
    {
      "type": "move",
      "section": "🧰 Other",
      "hidden": false
    },
    {
      "type": "rename",
      "section": "🧰 Other",
      "hidden": true
    },
    {
      "type": "config",
      "section": "🧰 Other",
      "hidden": true
    },
    {
      "type": "add",
      "section": "✨  New",
      "hidden": false
    },
    {
      "type": "test",
      "section": "🧪 Tests",
      "hidden": false
    },
    {
      "type": "docs",
      "section": "📚 Documentation",
      "hidden": false
    }
  ],
  "initial-version": "0.0.1",
  "bump-minor-pre-major": true,
  "include-v-in-tag": true,
  "pull-request-title-pattern": "release: ${version}",
  "pull-request-header": "🤖 From release-please bot"
}