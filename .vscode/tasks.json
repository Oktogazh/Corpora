{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend-emulator",
      "type": "shell",
      "command": "cd firebase && firebase emulators:start",
      "presentation": {
        "group": "default"
      }
    },
    {
      "type": "process",
      "label": "terminal",
      "command": "/bin/zsh", // or "/bin/bash"
      "args": [
        "-l"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "focus": true,
        "group": "default",
        "panel": "dedicated"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "web-dev",
      "type": "shell",
      "command": "cd web && npm run dev",
      "presentation": {
        "group": "front"
      }
    },
    {
      "label": "web-unit-test",
      "type": "shell",
      "command": "cd web && npm run test:unit",
      "presentation": {
        "group": "front"
      }
    },
    {
      "label": "runserver",
      "type": "shell",
      "dependsOn": [
        "backend-emulator",
        "terminal",
        "web-dev",
        "web-unit-test"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}